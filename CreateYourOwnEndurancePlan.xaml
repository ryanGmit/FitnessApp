<Page
    x:Class="FinalWorkoutApp.CreateYourOwnEndurancePlan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalWorkoutApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFBF462">

        <!-- Start of first text block-->
        <TextBlock x:Name="DescriptionTextBlock" HorizontalAlignment="Left" Margin="43,48,0,0" Text="When it comes to endurance training it is important to have a variety of training that includes upper and lower body.  Please be careful when trying a new weight. Please use numbers that suits your own personal experience and what you are comfotable with.  This is your goal and journey do what suits you best !   
 Please Input an exercise into each box below"
                   TextWrapping="Wrap" VerticalAlignment="Top" Height="177" Width="369"/>
        <!-- End of first text block-->

        <!-- Start of first exercise functions-->
        <!-- Input text box-->
        <TextBox x:Name="Input1" HorizontalAlignment="Left" Text=" " VerticalAlignment="Top" Margin="69,252,0,0" Width="179" TextChanged="Input1_TextChanged"/>
        <!-- Save1 button-->
        <Button x:Name="Save1" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="279,256,0,0" Click="Save1_Click" Background="#FFBFBFBF"/>
        <!-- ReadTo1 block-->
        <TextBlock x:Name="ReadTo1" HorizontalAlignment="Left" Margin="35,510,0,0" Text=" " TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <!-- Load1  button-->
        <Button x:Name="Load1" Content="Load" HorizontalAlignment="Left" Margin="325,510,0,0" VerticalAlignment="Top" Click="Load1_Click" Background="#FFBFBFBF"/>
        <!-- Check Box for first exercise-->
        <CheckBox x:Name="CheckBox1" Content="CheckBox" HorizontalAlignment="Left" Margin="208,507,0,0" VerticalAlignment="Top"/>
        <!-- End of first exercise functions-->

        <!-- Start of second exercise functions-->
        <!-- Input text box-->
        <TextBox x:Name="Input2" HorizontalAlignment="Left" Text=" " VerticalAlignment="Top" Margin="69,302,0,0" Width="179" TextChanged="Input2_TextChanged"/>
