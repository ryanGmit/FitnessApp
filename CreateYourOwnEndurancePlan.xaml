        <Button x:Name="Save2" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="278,303,0,0" Click="Save2_Click" Background="#FFBFBFBF"/>
        <!-- ReadTo2 block-->
        <TextBlock x:Name="ReadTo2" HorizontalAlignment="Left" Margin="35,550,0,0" Text=" " TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <!-- Load2  button-->
        <Button x:Name="Load2" Content="Load" HorizontalAlignment="Left" Margin="325,555,0,0" VerticalAlignment="Top" Click="Load2_Click" Background="#FFBFBFBF"/>
        <!-- Check Box for second exercise-->
        <CheckBox x:Name="CheckBox2" Content="CheckBox" HorizontalAlignment="Left" Margin="208,553,0,0" VerticalAlignment="Top"/>
        <!-- End of second exercise functions-->

        <!-- Start of third exercise functions-->
        <!-- Input text box-->
        <TextBox x:Name="Input3" HorizontalAlignment="Left" Text=" " VerticalAlignment="Top" Margin="69,344,0,0" Width="179" TextChanged="Input3_TextChanged"/>
        <!-- Save3 button-->
        <Button x:Name="Save3" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="279,348,0,0" Click="Save3_Click" Background="#FFBFBFBF"/>
        <!-- ReadTo3 block-->
        <TextBlock x:Name="ReadTo3" HorizontalAlignment="Left" Margin="35,585,0,0" Text=" " TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <!-- Load3  button-->
        <Button x:Name="Load3" Content="Load" HorizontalAlignment="Left" Margin="325,596,0,0" VerticalAlignment="Top" Click="Load3_Click" Background="#FFBFBFBF"/>
        <!-- Check Box for third exercise-->
        <CheckBox x:Name="CheckBox3" Content="CheckBox" HorizontalAlignment="Left" Margin="208,589,0,0" VerticalAlignment="Top"/>
        <!-- End of third exercise functions-->

        <!-- Start of fourth exercise functions-->
        <!-- Input text box-->
        <TextBox x:Name="Input4" HorizontalAlignment="Left" Text=" " VerticalAlignment="Top" Margin="69,387,0,0" Width="179" TextChanged="Input4_TextChanged"/>
        <!-- Save4 button-->
        <Button x:Name="Save4" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="277,388,0,0" Click="Save4_Click" Background="#FFBFBFBF"/>
        <!-- ReadTo4 block-->
        <TextBlock x:Name="ReadTo4" HorizontalAlignment="Left" Margin="35,617,0,0" Text=" " TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <!-- Load4  button-->
        <Button Content="Load" HorizontalAlignment="Left" Margin="325,638,0,0" VerticalAlignment="Top" Click="Button_Click" Background="#FFBFBFBF"/>
        <!-- Check Box for fourth exercise-->
        <CheckBox x:Name="CheckBox4" Content="CheckBox" HorizontalAlignment="Left" Margin="208,627,0,0" VerticalAlignment="Top"/>

        <!-- End of fourth exercise functions-->
    </Grid>
</Page>
